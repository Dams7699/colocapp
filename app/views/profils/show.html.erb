<div class="profil-container text-center">
  <div class="profil-pictures">
    <% if current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, class:'w-100' %>
    <% else %>
      <%= image_tag "empty.png", class:"w-100" %>
    <% end %>
  </div>
  

  <div class="profil-content">
    <div class="user_photo_label">
      <label for="user_photo"><i class="fas fa-plus"></i></label>
      <input type="file" name="file" id="user_photo" class="add_photo"/>
    </div>
    <h2><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></h2>

    <div class="description">
      <% if current_user.description == nil %>
        <%= current_user.description = "Pensez à revenir compléter une description pour vous décrire aux colocations intéressés !" %>
      <% end %>
    </div>
  
    <h2>Personnalité</h2>


      <div class="content_chekbox">
        <% current_user.personalities.each do |p| %>
          <div class="jaime"><%= p.full_name %></div>
        <% end %>
        <!--<p>j'aime pas</p>-->
      </div>

    <h2>Hobbies</h2>

      <div class="content_chekbox">
        <% current_user.hobbies.each do |l| %>
          <div class="jaime"><%= l.full_name %></div>
        <% end %>
        <!--<p>j'aime pas</p>-->
      </div>

    <h2>Goals Colocation</h2>
      <div class="content_chekbox">
        <% current_user.goals.each do |g| %>
            <div class="jaime"><%= g.full_name %></div>
          <% end %>
          <!--<p>j'aime pas</p>-->
    <%= link_to "Log out ☠️", destroy_user_session_path, method: :delete, class:"btn btn-danger" %>
  </div>
</div>
