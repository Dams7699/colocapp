<div class="form-container">
  <%= image_tag ("logo.svg"), class: "icone-landing" %>
  <h2>Connexion</h2>

  <div class="text-left">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "inputform"  } %>
        <%= f.input :password,
                    required: false,
                    label: 'Mot de passe',
                    input_html: { autocomplete: "current-password", class: "inputform" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <%= f.button :submit, "Je me connecte", class:"btn-bottom" %>

    <% end %>
  </div>



  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "mot de passe" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>



    <%= f.button :submit, "Connexion", class:"btn-landing" %>

  <% end %>



  <%= render "devise/shared/links" %>
</div>
