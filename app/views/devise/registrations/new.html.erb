<div class="form-container">
  <%= image_tag ("logo.svg"), class: "icone-landing" %>

  <h2>Inscription</h2>


  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                    required: true,
                    label: "PrÃ©nom",
                    input_html: { autocomplete: "first_name", class: "inputform" } %>
    <%= f.input :last_name,
                    required: true,
                    label: "Nom",
                    input_html: { autocomplete: "last_name", class: "inputform"  } %>

    <%= f.input :birthday,
                  as: :string,
                  required: true,
                  label: "date de naissance :",
                  input_html: { class: "datepicker inputform" } %>

    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "inputform"  }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                label: "Mot de Passe",
                input_html: { autocomplete: "new-password", class: "inputform"  } %>
    <%= f.input :password_confirmation,
                required: true,
                label: "Mot de Passe",
                input_html: { autocomplete: "new-password", class: "inputform"  } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Je m'inscris", class:"btn-bottom" %>
  </div>
<% end %>


</div>
